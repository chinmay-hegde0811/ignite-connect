{
  "name": "@ignite/ctintegration-cron",
  "version": "1.0.0",
  "description": "Cron job for the PSP Integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run prisma:generate && npm run prisma:push && npm run workspace:build-all && tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/index.connect.ts",
    "start": "node dist/index.connect.js",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "prettier --write 'src/**/*.ts'",
    "precommit": "npm run lint-fix && npm run pretty",
    "prepush": "npm run lint",
    "gcp-build": "npm run prisma:generate && npm run prisma:push && npm run workspace:build-all && tsc",
    "prisma:generate": "npm run -workspace db prisma:generate",
    "prisma:push": "npm run -workspace db prisma:push",
    "workspace:build-all": "npm run -workspaces build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "tsx": "^4.14.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@ignite/ctintegration-app": "^1.0.0",
    "@ignite/ctintegration-do": "^1.0.0",
    "@ignite/ctintegration-util": "^1.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5"
  },
  "ignite": {
    "restrictedFolders": [
      "custom"
    ],
    "restrictedFiles": [
      "custom-factory.ts"
    ]
  },
  "workspaces": [
    "do",
    "util",
    "ct",
    "psp",
    "db",
    "app"
  ]
}
